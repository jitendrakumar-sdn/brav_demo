<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Brav</title>
  <!-- style file link -->
  <link rel="stylesheet" href="../styles/bootstrap.css" type="text/css">
  <link rel="stylesheet" href="../styles/style.css" type="text/css">
  <!-- fonts link -->
  <link href="https://fonts.googleapis.com/css?family=Raleway:400,400i,500,500i,600,600i,700" rel="stylesheet">
</head>

<body>
  <div class="login-container">
    <div class="container">
      <div class="col-md-4"></div>
      <div class="col-md-4 text-center margin-top-login">
        <div class="login-logo">
          <img src="images/login-log.png" alt="" class="">
        </div>
        <form>
          <div class="form-group">
            <input type="text" class="form-control txt-username" id="username" placeholder="Username">
            <input type="text" class="form-control txt-username" id="password" placeholder="Password">
            <p id="errMsg"></p>
            <button type="button" class="btn btn-default login-btn" id="nextBtn">next</button>
            <button type="button" class="btn btn-default login-btn" id="loginBtn">login</button>
          </div>
        </form>
        <div class="password-link text-center">
          <a href="password.html">Forgot your username?</a>
        </div>
        <div class="password-link text-center">
          <a href="#" id="register-user">New Here!!!</a>
        </div>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

  <script src="../js/bootstrap.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#loginBtn').toggle();
      $('#password').toggle();

      $("#nextBtn").click(function () {
        $('#errMsg').text('');
        if (username && isValidEmail($('#username').val())) {
          $('#loginBtn').toggle();
          $('#password').toggle();
          $('#nextBtn').toggle();
        } else {
          $('#errMsg').text('Enter valid username');
        }

      });

      $("#loginBtn").click(function () {
        $('#errMsg').text('');
        if ($('#password').val() && isValidEmail($('#username').val())) {
          let data = {
            username: $('#username').val(),
            password: $('#password').val()
          };

          $.ajax({
            url: '../mediators.json',
            method: 'GET',
            success: function (res) {
              console.log('login res', res)
              if (res.length > 0) {
                for (var i = 0; i < res.length; i++) {
                  if (res[i].username == data.username && res[i].password == data.password) {

                    // console.log(window.location)
                    window.location = '/mediator/' + res[i].id
                    // $.ajax({
                    //   url: '../mediators.json',
                    //   method: 'GET',
                    //   success: function (res) {
                    //     console.log()
                    //   }
                    // })
                  }
                }
              } else {

              }
            },
            error: function (err) {
              console.log('Login error', err);
              $('#errMsg').text(err.msg);
            },
            dataType: 'JSON'
          });

          // $.ajax({
          //   url: '/users/login',
          //   method: 'POST',
          //   data: data,
          //   success: function (res) {
          //     console.log('login res', res)
          //     if (res.success) {} else {
          //       $('#errMsg').text(res.msg);
          //     }
          //   },
          //   error: function (err) {
          //     console.log('Login error', err);
          //     $('#errMsg').text(err.msg);
          //   },
          //   dataType: 'JSON'
          // });
        } else {
          if (!username)
            $('#errMsg').text('Enter valid Password');
          else
            $('#errMsg').text('Enter valid Username');
        }

      });

      $('#register-user').click(function () {
        // $
      })

      function isValidEmail(email) {
        if (email && (/^\w+@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$/).test(email)) {
          return true;
        }
        return false;
      }
    });

  </script>

</body>

</html>
